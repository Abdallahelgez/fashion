          "value": "false",
          "label": {
            "ar": "لا يوجد مسافة",
            "en": "no section margin"
          }
        }
      ]
    },
    "autoplay": {
      "type": "radios",
      "label": {
        "ar": "تحريك البانر",
        "en": "banner autoplay"
      },
      "options": [
        {
          "value": "true",
          "label": {
            "ar": "متحرك",
            "en": "autoplay"
          }
        },
        {
          "value": "false",
          "label": {
