<div section-id="{{ sectionId }}" data-lg-scroll-offset="130" class="app-section-magin">
	<div class="container-sec">

		<div class="slider-products {% if settings.title %}section-container {% endif %}">
			{% if settings.page_title %}
				<h2 class="section-title">{{settings.page_title}}</h2>
			{% endif %}

			<div class="custom-simpl-card">
				<div class="text-div-partion">
					{% if settings.title %}
						<h3>{{settings.title}}</h3>
					{% endif %}
					{% if settings.sub_title %}
						<p class="desc">{{settings.sub_title}}</p>
					{% endif %}
					{% if settings.link_text %}
						<a href="{{settings.url}}" class="theme-btn">{{settings.link_text}}</a>
					{% endif %}
				</div>
				<div class="ancors-div">
					<div class="ancors">
						{% for  slider in settings.sliders %}
							<div class="ancor-item">
								<div class="parent-img">
                                    <img src="{{slider.image}}" class="img" loading="lazy"/>
                                </div>
								<div class="title">{{slider.link_text}}</div>
								<a class="ancor-btn" href="{{slider.url}}"></a>

							</div>
						{% endfor %}

					</div>
				</div>
			</div>
		</div>

	</div>
</div>
	<script>
		let ancorsContainer = document.querySelector('.ancors');

// اختيار أول عنصر يحتوي على كلاس ancor-item
let firstAncorItem = ancorsContainer.querySelector('.ancor-item');

// إضافة كلاس active لهذا العنصر
firstAncorItem.classList.add('active');
const buttons = document.querySelectorAll(".ancor-item .title");

buttons.forEach(button => {
button.addEventListener("click", (event) => { // إزالة كلاس active من جميع العناصر
document.querySelectorAll(".ancor-item").forEach(item => {
item.classList.remove("active");
});

// إضافة كلاس active للعنصر الذي يحتوي على الزر الذي تم الضغط عليه
const ancorItem = event.target.closest(".ancor-item");
if (ancorItem) {
ancorItem.classList.add("active");
}
});
});
	</script>

