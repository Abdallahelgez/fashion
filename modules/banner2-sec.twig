<div section-id="{{ sectionId }}" data-lg-scroll-offset="130" class="app-section-magin">

<div style="background-image:url({{settings.image}})" data-md-scroll-offset="130" data-sm-scroll-offset="94" class="season-section banner-2 national-day-section   {% if settings.position == "right" %}right{% elseif settings.position == "left" %}left{% elseif settings.position == "center" %}center{% else %}right{% endif %} ">
	<div class="national-day">
		{% if settings.title %}
			<h3>{{settings.title}}</h3>
		{% endif %}
		{% if settings.sub_title %}
			<p class="desc">{{settings.sub_title}}</p>
		{% endif %}
		{% if settings.link_text %}
			<a href="{{settings.url}}" class=" theme-btn">{{settings.link_text}} <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-left-circle" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-5.904 2.803a.5.5 0 1 0 .707-.707L6.707 6h2.768a.5.5 0 1 0 0-1H5.5a.5.5 0 0 0-.5.5v3.975a.5.5 0 0 0 1 0V6.707z"/>
</svg></a>
		{% endif %}
	</div>
</div>

</div>

{% schema %}
{
  "name": {
    "ar": "2 لافته",
    "en": "banner 2"
  },
  "icon": "fal fa-box",
  "display": true,
  "settings": {
    "image": {
      "type": "image",
      "label": {
        "ar": "الصوره",
        "en": "image"
      }
    },
    "title": {
      "type": "text",
      "label": {
        "ar": "العنوان الرئيسي",
        "en": "Title"
      }
    },

    "sub_title": {
      "type": "text",
      "label": {
        "ar": "العنوان الفرعي",
        "en": "explain"
      }
    },
    "url":{
          "type":"url",
          "label":{
            "ar":"اللينك",
            "en":"url"
          }
        },
   "link_text": {
      "type": "text",
      "label": {
        "ar": "نص الزرار",
        "en": "text"
      }
    }, "position": {
                      "type": "radios",
                      "label": {
                        "ar": "مكان النص",
                        "en": "text position"
                      },
                      "options": [
                        {
                          "value": "right",
                          "label": {
                            "ar": "علي اليمين",
                            "en": "on right"
                          }
                        },
                        {
                          "value": "left",
                          "label": {
                            "ar": "علي اليسار",
                            "en": "on left"
                          }
                        },
                        {
                          "value": "center",
                          "label": {
                            "ar": "علي الوسط",
                            "en": "in center"
                          }
                        }
                      ]
                    
}
  }
}
{% endschema %}
