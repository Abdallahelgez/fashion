<div section-id="{{ sectionId }}" data-lg-scroll-offset="130" data-md-scroll-offset="130" data-sm-scroll-offset="94" class="category-product-section {% if settings.space_top == "true" %}app-section-magin{% elseif settings.space_top == "false" %} {% else %} {% endif %} products-barnds {% if settings.position == "right" %}right{% elseif settings.position == "left" %}left{% else %}right{% endif %}">
	<div class="category-product-content">
    <div class="slider-img">
			<div class="parent-img">
                <img src="{{settings.imagebanner}}" alt="" class="img" >		
			</div>
		</div>
		<div class="slider-category">
			
			{% if settings.title or settings.desc or settings.text_btn %}<div class="slider-content">
			 {% if settings.title or settings.desc %}	<div class="text">
					
          {% if settings.title %} <h1 class="settings-slider-title">{{settings.title}}</h1>{% endif %}
					{% if settings.desc %}<p>{{settings.desc}}</p> {% endif %}
				</div>
        {% endif %}
				
          {% if settings.text_btn %}<a class="settings-slider-text btn btn-primary btn-product-card" href="{{settings.url}}">
					{{settings.text_btn}}</a> {% endif %}
			</div>
      {% endif %}
		</div>
		
	</div>
</div>
 <script>
			
 </script>


