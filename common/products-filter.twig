<div class="d-flex align-items-center justify-content-between products-filter">

	<div class="d-none d-lg-inline-block text-color-primary custom-category-name">
		<h2>
			{% if category.name  %}
				{{category.name}}
			{% else %}
				{{locals.All_products}}
			{% endif %}
			-
			{% if count > 0 %}
				{{count}}&nbsp;{{ locals.products_list_result_products }}
			{% else %}
				{{locals.not_found_products}}
			{% endif %}
		</h2>
		{# {% if count > 0 %}
			<span class="text-line-height d-inline-block">{{ locals.products_list_result }}&nbsp;</span>
			<span class="text text-line-height d-inline-block" style="font-weight: bold">{{count}}&nbsp;</span>
			<span class="text-line-height d-inline-block">
				{{ locals.products_list_result_products }}
			</span>
		{% else %}
			<span class="text text-line-height d-inline-block" style="font-weight: bold">{{  locals.products_list_empty }}&nbsp;
			</span>
		{% endif %} #}
	</div>

	<div class="sort-section m-lg-0 ml-auto">
		<div onclick="openSideAttr()" class=" d-lg-none filter-funnel filter-funnel-1 d-md-flex align-items-center d-sm-none ">
			<i class="bi bi-funnel"></i>
		</div>
		<div class="d-flex filter-buttons-container justify-content-center ">

			<div class="{% if has_products_filtration %}d-sm-inline-block d-xs-inline-block d-md-none{% else %}d-inline-flex justify-content-center{% endif %}">

				<div>
					<label class="filter-result">{{ locals.products_list_filter }}</label>
				</div>
				{# <button id="products-list-filter" type="button" class="btn btn-filter filter-block-width d-lg-none products-list-filter-sm" data-toggle="collapse" data-target="#filters-form-collapse-sm" onclick="toggleProductAttributeMobile()">
				<span>{{ locals.products_list_filter }}</span>
				&nbsp;
				<i class="icon-add filter-icons filters_expanded"></i>
				<i class="icon-remove filter-icons filters_not_expanded d-none"></i>
				</button> #}
				{% if  products.filters|length > 0 %}
					<div class="filter-funnel filter-block-width d-lg-none products-list-filter-sm" data-toggle="collapse" data-target="#filters-form-collapse-sm" onclick="toggleProductAttributeMobile()">
						<i class="bi bi-funnel"></i>
					</div>
				{% endif %}

				<button id="products-list-filter" type="button" class="btn btn-filter filter-block-width d-none d-lg-block " data-toggle="modal" data-target="#filterModal">
					<i class="icon-filter-secondary" aria-hidden="true"></i>
					<span>{{ locals.products_list_filter }}</span>


				</button>


			</div>

			<div class="d-flex filter-block-width sort-block-width justify-content-center">
				<div class="align-items-center filter-order-parent d-none">
					<label class="filter-order">{{ locals.products_list_sort }}:
						{# {% if requestGet('sort_by') == 'popularity_order' %}
																																									{{ locals.products_list_filter_popularity }}
																																								{% elseif requestGet('sort_by') == 'price' and  requestGet('order') == 'asc'%}
																																									{{ locals.products_list_filter_price_low }}
																																								{% elseif requestGet('sort_by') == 'price' and  requestGet('order') == 'desc'%}
																																									{{ locals.products_list_filter_price_high }}
																																									{% else%}
																																									{{ locals.products_list_filter_latest }}
																																								{% endif %} #}
					</label>
				</div>
				<div class="dropdown d-flex align-items-center">


					<button id="products-list-sort" type="button" class="btn btn-filter" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						<i class="icon-swap_vert text hide-ie"></i>
						<span>
							{% if requestGet('sort_by') == 'popularity_order' %}
								{{ locals.products_list_filter_popularity }}
							{% elseif requestGet('sort_by') == 'price' and  requestGet('order') == 'asc'%}
								{{ locals.products_list_filter_price_low }}
							{% elseif requestGet('sort_by') == 'price' and  requestGet('order') == 'desc'%}
								{{ locals.products_list_filter_price_high }}
								{% else%}
								{{ locals.products_list_filter_latest }}
							{% endif %}
						</span>


					</button>
					<div class="dropdown-menu select-dropdown">

						<a class="dropdown-item" onclick="this.href = this.getAttribute('data-href')" data-href="{{ requestAdd({sort_by: 'created_at', order: 'desc'}) }}">
							{{ locals.products_list_filter_latest }}
						</a>
						<a class="dropdown-item" onclick="this.href = this.getAttribute('data-href')" data-href="{{ requestAdd({sort_by: 'popularity_order', order: 'asc'}) }}">
							{{ locals.products_list_filter_popularity }}
						</a>
						<a class="dropdown-item" onclick="this.href = this.getAttribute('data-href')" data-href="{{ requestAdd({sort_by: 'price', order: 'asc'}) }}">
							{{ locals.products_list_filter_price_low }}
						</a>
						<a class="dropdown-item" onclick="this.href = this.getAttribute('data-href')" data-href="{{ requestAdd({sort_by: 'price', order: 'desc'}) }}">
							{{ locals.products_list_filter_price_high }}
						</a>

					</div>
					{# <div class="filter-in-category"> 
																									          <div class="filter-item {% if requestGet('sort_by') == 'created_at' %}active{% endif %}">
																															<a class="dropdown-item" onclick="this.href = this.getAttribute('data-href')" data-href="{{ requestAdd({sort_by: 'created_at', order: 'desc'}) }}">
																																{{ locals.products_list_filter_latest }}
																															</a>
																														</div>
																														<div class="filter-item {% if requestGet('sort_by') == 'popularity_order' %}active{% endif %}">
																															<a class="dropdown-item" onclick="this.href = this.getAttribute('data-href')" data-href="{{ requestAdd({sort_by: 'popularity_order', order: 'asc'}) }}">
																																{{ locals.products_list_filter_popularity }}
																															</a>
																														</div>
																														<div class="filter-item {% if requestGet('sort_by') == 'price' and  requestGet('order') == 'asc' %}active{% endif %}">
																															<a class="dropdown-item" onclick="this.href = this.getAttribute('data-href')" data-href="{{ requestAdd({sort_by: 'price', order: 'asc'}) }}">
																																{{ locals.products_list_filter_price_low }}
																															</a>
																														</div>
																														<div class="filter-item {% if requestGet('sort_by') == 'price' and  requestGet('order') == 'desc' %}active{% endif %}">
																															<a class="dropdown-item" onclick="this.href = this.getAttribute('data-href')" data-href="{{ requestAdd({sort_by: 'price', order: 'desc'}) }}">
																																{{ locals.products_list_filter_price_high }}
																															</a>
																														</div>
																									
																													</div> #}
				</div>

			</div>


		</div>
		
    <div>

			<div class="filter-in-category fill">

				<div class="filter-item grid-fill active">
					<div class="button ">
						<i class="bi bi-grid-fill"></i>
						{{locals.grid_fill}}</div>
				</div>
				<div class="filter-item list-fill ">
					<div class="button">
						<i class="bi bi-list"></i>
						{{locals.list_fill}}</div>
				</div>
			</div>
		</div>

		

	</div>


</div>

<div id="filters-form-collapse-sm" class="collapse mt-3">
    {% include 'products-filter-form.twig' %}
</div>
<div class="modal fade" id="filterModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body" style="position: relative">
                <button id="products-list-filter-form-close"
                        type="button"
                        class="close btn" data-dismiss="modal" aria-label="Close">
                    <span class="icon-times2"></span>
                </button>
                {% include 'products-filter-form.twig' %}
            </div>
        </div>
    </div>
</div>

