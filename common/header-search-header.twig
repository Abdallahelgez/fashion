<div class="search-header header-theme-bg-primary">
	<div class="container-sec">
		<div class="d-flex align-items-center justify-content-between search-header-bar">
			<div class="d-flex align-items-center bd-highlight header-logo">

				{% if template != 'home' %}
					<a onclick="goBack()" class="ic-menu-back d-block d-lg-none">
						<span style="font-weight: bold" class="{% if session.lang.code == 'ar' %}icon-arrow-right{% else %}icon-arrow-left{% endif %} header-theme-icon-primary"></span>
					</a>
				{% endif %}

				<a href="javascript:void(0);" onclick="window.slidingMenu.open()" class="ic menu icon-menu-top d-block d-lg-none" tabindex="1">
					<i class="bi bi-list"></i>
				</a>

				<a href="/" style="width: auto; height: 100%; display: block">
					{% if header_settings.header_logo %}
						{% set logoUrl = header_settings.header_logo %}
					{% else %}
						{% set logoUrl = store.logo %}
					{% endif %}

					<img class="image-logo {% if header_settings.header_logo_mobile %} d-none d-lg-block {% endif %}" src="{{ imageUrl(logoUrl,{ h: 175, q: 100 }) }}" alt="{{ store.name }}" style="width: auto; max-height: 100%">

					{% if header_settings.header_logo_mobile %}
						{% set logoUrlMobile = header_settings.header_logo_mobile %}
						<img class="image-logo d-block d-lg-none" src="{{ imageUrl(logoUrlMobile ,{ h: 175, q: 100 }) }}" alt="{{ store.name }}" style="width: auto; max-height: 100%">
					{% endif %}
				</a>
			</div>
